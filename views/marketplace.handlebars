<body>
{{!-- First row of CARDS --}}

    <div class="container">
        <h3 class="greeting">Welcome to Le Marché Français, </h3>
        <br>
        <div class="row">
            <div class="col-lg-12">
                <div class="card-deck">
                    <div class="card cardCategory text-center category" name="bakery">
                        <img class="card-img-top" src="/assets/images/marketpics/bakery.jpeg" alt="Bakery">
                        <div class="card-body">
                            <h5 class="card-title">Boulangerie</h5>
                            <p class="card-text">Freshly baked breads</p>
                        </div>
                    </div>
                    <div class="card cardCategory text-center category" name='cheese'>
                        <img class="card-img-top" src="/assets/images/marketpics/cheeseshop.jpg" alt="Cheese market">
                        <div class="card-body">
                            <h5 class="card-title">Fromagerie</h5>
                            <p class="card-text">Fine cheeses</p>
                        </div>
                    </div>
                    <div class="card text-center category" name='Dessert'>
                        <img class="card-img-top" src="/assets/images/marketpics/dessert.jpg" alt="Dessert market">
                        <div class="card-body">
                            <h5 class="card-title">Dessert</h5>
                            <p class="card-text">Sweet treats</p>
                            
                        </div>
                    </div>
                    <div class="card cardCategory text-center category" name='fish'>
                        <img class="card-img-top" src="/assets/images/marketpics/fish.jpeg" alt="Fish market">
                        <div class="card-body">
                            <h5 class="card-title">Poissonerie</h5>
                            <p class="card-text" name=>Fresh fish caught locally</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<br>
<br>
{{!-- Second row of CARDS --}}
    <div class="container">
        <div class="row d-flex align-items-stretch">
            <div class="col-lg-12">
                <div class="card-deck">
                    <div class="card cardCategory text-center category" name='General_Store'>
                        <img class="card-img-top" src="/assets/images/marketpics/generalstore.jpg" alt="General store">
                        <div class="card-body">
                            <h5 class="card-title">General Store</h5>
                            <p class="card-text">Everyday needs</p>
                        </div>
                    </div>
                    <div class="card text-center category" name='Meat'>
                        <img class="card-img-top" src="/assets/images/marketpics/butcher.jpg" alt="Butcher market">
                        <div class="card-body">
                            <h5 class="card-title">Boucherie</h5>
                            <p class="card-text">Grass fed, prime meats</p>
                        </div>
                    </div>
                    <div class="card cardCategory text-center category" name='Produce'>
                        <img class="card-img-top" src="/assets/images/marketpics/produce.jpg" alt="Produce market">
                        <div class="card-body">
                            <h5 class="card-title">Produire</h5>
                            <p class="card-text">From farm to your table</p>
                        </div>
                    </div>
                    <div class="card cardCategory text-center category" name='Wine'>
                        <img class="card-img-top" src="/assets/images/marketpics/wine.jpg" alt="Wine shop">
                        <div class="card-body">
                            <h5 class="card-title">Du Vin</h5>
                            <p class="card-text">Fine wines from all over</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<br>
<br>
